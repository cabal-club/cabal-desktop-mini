{
  "name": "cabal-desktop-mini",
  "version": "1.0.1",
  "description": "a minimal Cabal p2p offline-first desktop application",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "npm run compile && electron-builder",
    "dist:dir": "npm run dist --dir -c.compression=store -c.mac.identity=null",
    "postinstall": "electron-builder install-app-deps",
    "test": "standard && test-deps"
  },
  "productName": "Cabal Mini",
  "repository": "nikolaiwarner/cabal-desktop-mini",
  "author": "Cabal Club",
  "license": "GPL-3.0",
  "build": {
    "appId": "club.cabal.mini",
    "protocols": [
      {
        "name": "cabal",
        "schemes": [
          "cabal"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "artifactName": "cabal-desktop-mini-${version}-mac.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ],
      "category": "Network"
    },
    "appImage": {
      "artifactName": "cabal-desktop-mini-${version}-linux-${arch}.${ext}"
    },
    "win": {
      "publisherName": "cabal",
      "target": [
        "squirrel"
      ]
    },
    "nsis": {
      "artifactName": "cabal-desktop-mini-${version}-windows.${ext}"
    }
  },
  "dependencies": {
    "cabal-core": "^4.0.0",
    "choo": "^6.13.1",
    "choo-devtools": "^2.5.1",
    "collect-stream": "^1.2.1",
    "dat-encoding": "^5.0.1",
    "discovery-swarm": "^5.1.4",
    "electron-collection": "^1.2.0",
    "hypercore-crypto": "^1.0.0",
    "identicon.js": "^2.3.3",
    "js-yaml": "^3.12.1",
    "mkdirp": "^0.5.1",
    "random-access-memory": "^3.1.1",
    "source-map-support": "^0.5.10",
    "tachyons": "^4.11.1"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^4.0.5",
    "electron-builder": "^20.38.5",
    "electron-builder-squirrel-windows": "^20.38.5",
    "electron-webpack": "^2.6.2",
    "standard": "^12.0.1",
    "webpack": "^4.29.3"
  }
}
